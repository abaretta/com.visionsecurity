                        },
                        {
                            "id": "1",
                            "label": {
                                "en": "60 seconds",
                                "nl": "60 seconden"
                            }
                        },
                        {
                            "id": "2",
                            "label": {
                                "en": "120 seconds",
                                "nl": "120 seconden"
                            }
                        },
                        {
                            "id": "3",
                            "label": {
                                "en": "No automatic stop",
                                "nl": "Geen automatische stop"
                            }
                        }
                    ]
